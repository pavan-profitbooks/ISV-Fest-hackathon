<h1 class="mb-4"><i class="fas fa-exclamation-circle"></i> Unprocessed Receipts</h1>

<div class="card shadow-sm mb-4 border-warning">
  <div class="card-header bg-warning text-white">
    <h4 class="mb-0">
      <i class="fas fa-info-circle"></i>
      <%= @receipts.count %> Unprocessed Receipts - Total: $<%= number_with_precision(@total_amount, precision: 2) %>
    </h4>
  </div>
  <div class="card-body">
    <p class="text-muted">
      These receipts have not been converted to expenses yet. Click "Create Expense" to process them.
    </p>
  </div>
</div>

<% if @receipts.any? %>
  <div class="row">
    <% @receipts.each do |receipt| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="mb-1"><i class="fas fa-store"></i> <%= receipt.merchant %></h5>
                <small class="text-muted">
                  <i class="far fa-calendar"></i> <%= receipt.date.strftime('%B %d, %Y') %>
                </small>
              </div>
              <div class="text-end">
                <div class="h4 text-warning mb-0">
                  $<%= number_with_precision(receipt.amount, precision: 2) %>
                </div>
              </div>
            </div>

            <% if receipt.vendor %>
              <p class="mb-2">
                <strong>Vendor:</strong> <%= receipt.vendor.name %>
              </p>
            <% end %>

            <% if receipt.notes.present? %>
              <p class="mb-3 text-muted">
                <small><%= receipt.notes %></small>
              </p>
            <% end %>

            <div class="d-flex gap-2">
              <%= link_to new_expense_path(receipt_id: receipt.id), class: 'btn btn-primary btn-sm flex-fill' do %>
                <i class="fas fa-plus"></i> Create Expense
              <% end %>
              <% if defined?(receipts_path) %>
                <%= link_to receipt, class: 'btn btn-info btn-sm' do %>
                  <i class="fas fa-eye"></i> View
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card shadow-sm">
    <div class="card-body text-center py-5">
      <i class="fas fa-check-circle text-success" style="font-size: 4rem; margin-bottom: 20px;"></i>
      <h4 class="text-muted">All Receipts Processed!</h4>
      <p class="text-muted">Great job! All your receipts have been converted to expenses.</p>
    </div>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to reports_path, class: 'btn btn-secondary' do %>
    <i class="fas fa-arrow-left"></i> Back to Reports
  <% end %>
</div>
