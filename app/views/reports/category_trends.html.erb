<h1 class="mb-4"><i class="fas fa-chart-line"></i> Category Spending Trends</h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: category_trends_reports_path, method: :get, local: true, class: 'row g-3' do |f| %>
      <div class="col-md-6">
        <%= f.label :months, 'Number of Months', class: 'form-label' %>
        <%= f.select :months, [[3, 3], [6, 6], [12, 12], [24, 24]], {}, class: 'form-select' %>
      </div>
      <div class="col-md-6 d-flex align-items-end">
        <%= f.submit 'Generate Report', class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-white">
    <h5 class="mb-0">Spending Trends Over Last <%= @months %> Months</h5>
  </div>
  <div class="card-body">
    <% @category_data.each do |category_name, monthly_data| %>
      <div class="mb-4">
        <h6><%= category_name %></h6>
        <% if monthly_data.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <% monthly_data.keys.each do |month| %>
                    <th><%= month.strftime('%b %Y') %></th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% monthly_data.values.each do |amount| %>
                    <td class="fw-bold">$<%= number_with_precision(amount, precision: 2) %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No data for this category</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to reports_path, class: 'btn btn-secondary' do %>
    <i class="fas fa-arrow-left"></i> Back to Reports
  <% end %>
</div>
