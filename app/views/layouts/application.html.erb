<!DOCTYPE html>
<html>
  <head>
    <title>Expense Manager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if logged_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="<%= root_path %>">
            <i class="fas fa-receipt"></i> Expense Manager
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link" href="<%= root_path %>"><i class="fas fa-home"></i> Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-receipt"></i> Receipts</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-dollar-sign"></i> Expenses</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-store"></i> Vendors</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-tags"></i> Categories</a>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-user"></i> <%= current_user.username %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><%= link_to 'Logout', logout_path, method: :delete, data: { turbo_method: :delete }, class: 'dropdown-item' %></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="container mt-4">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
