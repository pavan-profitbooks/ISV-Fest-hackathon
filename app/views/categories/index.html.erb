<style>
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 30px;
  }

  .category-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border-left: 5px solid;
    position: relative;
    overflow: hidden;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  }

  .category-card.food { border-left-color: #e74c3c; }
  .category-card.transport { border-left-color: #3498db; }
  .category-card.utilities { border-left-color: #f39c12; }
  .category-card.entertainment { border-left-color: #9b59b6; }
  .category-card.shopping { border-left-color: #1abc9c; }
  .category-card.health { border-left-color: #2ecc71; }
  .category-card.other { border-left-color: #95a5a6; }

  .category-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    margin-bottom: 15px;
  }

  .category-card.food .category-icon { background: rgba(231, 76, 60, 0.1); color: #e74c3c; }
  .category-card.transport .category-icon { background: rgba(52, 152, 219, 0.1); color: #3498db; }
  .category-card.utilities .category-icon { background: rgba(243, 156, 18, 0.1); color: #f39c12; }
  .category-card.entertainment .category-icon { background: rgba(155, 89, 182, 0.1); color: #9b59b6; }
  .category-card.shopping .category-icon { background: rgba(26, 188, 156, 0.1); color: #1abc9c; }
  .category-card.health .category-icon { background: rgba(46, 204, 113, 0.1); color: #2ecc71; }
  .category-card.other .category-icon { background: rgba(149, 165, 166, 0.1); color: #95a5a6; }

  .category-name {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 10px;
  }

  .category-description {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 20px;
    min-height: 40px;
  }

  .category-amount {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 5px;
  }

  .category-label {
    font-size: 0.85rem;
    color: #95a5a6;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #f0f0f0;
  }

  .stats-banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 30px;
    display: flex;
    justify-content: space-around;
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .stat-label {
    font-size: 1rem;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: 1fr;
    }

    .stats-banner {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-tags"></i> Categories</h1>
  <%= link_to new_category_path, class: 'btn btn-primary' do %>
    <i class="fas fa-plus"></i> New Category
  <% end %>
</div>

<div class="stats-banner">
  <div class="stat-item">
    <div class="stat-value"><%= @categories.count %></div>
    <div class="stat-label">Total Categories</div>
  </div>
  <div class="stat-item">
    <div class="stat-value">$<%= number_with_precision(@category_expenses.values.sum || 0, precision: 2) %></div>
    <div class="stat-label">Total Expenses</div>
  </div>
  <div class="stat-item">
    <div class="stat-value"><%= current_user.expenses.count %></div>
    <div class="stat-label">Expense Records</div>
  </div>
</div>

<% if @categories.any? %>
  <div class="category-grid">
    <% @categories.each do |category| %>
      <%
        category_class = case category.name.downcase
          when /food|dining|restaurant|grocery/ then 'food'
          when /transport|car|gas|uber|taxi/ then 'transport'
          when /utilit|electric|water|internet/ then 'utilities'
          when /entertainment|movie|game|music/ then 'entertainment'
          when /shop|clothing|electronics/ then 'shopping'
          when /health|medical|doctor|pharmacy/ then 'health'
          else 'other'
        end

        icon_class = case category_class
          when 'food' then 'fa-utensils'
          when 'transport' then 'fa-car'
          when 'utilities' then 'fa-bolt'
          when 'entertainment' then 'fa-film'
          when 'shopping' then 'fa-shopping-bag'
          when 'health' then 'fa-heartbeat'
          else 'fa-folder'
        end
      %>

      <div class="category-card <%= category_class %>">
        <div class="category-icon">
          <i class="fas <%= icon_class %>"></i>
        </div>
        <div class="category-name"><%= category.name %></div>
        <div class="category-description">
          <%= category.description.present? ? category.description : 'No description' %>
        </div>
        <div class="category-amount">
          $<%= number_with_precision(@category_expenses[category.id] || 0, precision: 2) %>
        </div>
        <div class="category-label">Total Spent</div>

        <div class="category-actions">
          <%= link_to category_path(category), class: 'btn btn-sm btn-info flex-fill' do %>
            <i class="fas fa-eye"></i> View
          <% end %>
          <%= link_to edit_category_path(category), class: 'btn btn-sm btn-warning flex-fill' do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= button_to category, method: :delete, data: { confirm: 'Are you sure? This will affect all related expenses.' }, class: 'btn btn-sm btn-danger flex-fill' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card shadow-sm text-center py-5">
    <div class="card-body">
      <i class="fas fa-tags" style="font-size: 4rem; color: #ccc; margin-bottom: 20px;"></i>
      <h4 class="text-muted">No categories found</h4>
      <p class="text-muted">Create your first category to organize your expenses</p>
      <%= link_to new_category_path, class: 'btn btn-primary mt-3' do %>
        <i class="fas fa-plus"></i> Create Your First Category
      <% end %>
    </div>
  </div>
<% end %>
