<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h5><i class="fas fa-exclamation-circle"></i> <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h5>
      <ul class="mb-0">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' do %>
      <i class="fas fa-tag"></i> Category Name *
    <% end %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'e.g., Food & Dining, Transportation, etc.', required: true %>
    <small class="text-muted">Choose a descriptive name for this expense category</small>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' do %>
      <i class="fas fa-align-left"></i> Description
    <% end %>
    <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Describe what types of expenses belong to this category...' %>
    <small class="text-muted">Optional: Add details about what this category includes</small>
  </div>

  <div class="mt-4">
    <%= form.submit class: 'btn btn-primary btn-lg' do %>
      <i class="fas fa-save"></i> <%= category.new_record? ? 'Create Category' : 'Update Category' %>
    <% end %>
  </div>
<% end %>
