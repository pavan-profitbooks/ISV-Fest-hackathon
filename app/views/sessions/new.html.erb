<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card shadow">
      <div class="card-body p-5">
        <h2 class="text-center mb-4">
          <i class="fas fa-sign-in-alt text-primary"></i> Login
        </h2>
        
        <%= form_with url: login_path, local: true do |f| %>
          <div class="mb-3">
            <%= label_tag :email, nil, class: 'form-label' %>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Enter email', required: true %>
            </div>
          </div>

          <div class="mb-4">
            <%= label_tag :password, nil, class: 'form-label' %>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter password', required: true %>
            </div>
          </div>

          <div class="d-grid">
            <%= submit_tag "Login", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <hr class="my-4">
        
        <p class="text-center mb-0">
          Don't have an account? <%= link_to 'Sign up here', signup_path, class: 'text-decoration-none' %>
        </p>
      </div>
    </div>
  </div>
</div>
